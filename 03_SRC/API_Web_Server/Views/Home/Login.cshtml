@model API_Web_Server.Domain.Users.Users
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Meiko Towada Việt Nam...</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/img/home/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/css/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/css/fonts/iconic/css/material-design-iconic-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/css/home/util.css">
    <link rel="stylesheet" type="text/css" href="~/css/home/main.css">
    <!--===============================================================================================-->
</head>
<body>
    @if (@ViewBag.Message != "")
    {
        <div id="message-box" class="overlay">
            <div class="popup">
                <h2>Thông báo</h2>
                <button class="close" id="close-message-btn">&times;</button>
                <div class="content">
                    @ViewBag.Message
                </div>
            </div>
        </div>
    }
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "login100-form validate-form" }))
                {

                    
                    <a href="@Url.Action("Index", "Home")">
                        <span class="login100-form-title p-b-48">
                            <img src="~/img/home/logo.png" />
                        </span>
                    </a>

                    <span class="login100-form-title p-b-26">
                        Welcome
                    </span>

                    <div class="wrap-input100 validate-input" data-validate="Nhập mã nhân viên của bạn.">
                        @Html.TextBoxFor(user => user.Ecode, new { @class = "input100", @name = "ecode" })
                        <span class="focus-input100" data-placeholder="E.Code"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Hãy nhập mật khẩu của bạn.">
                        <span class="btn-show-pass">
                            <i class="zmdi zmdi-eye"></i>
                        </span>
                        @Html.PasswordFor(user => user.Password, new { @class = "input100", @name = "pass" })
                        <span class="focus-input100" data-placeholder="Password"></span>
                    </div>

                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button class="login100-form-btn" type="submit" formaction='@Url.Action("Authenticate", "Home")'>Đăng nhập</button>
                        </div>
                    </div>
                    <div class="text-center p-t-115">
                        <span class="txt1">
                        </span>

                        <a class="txt2" href="#">

                        </a>
                    </div>
                    <footer class="border-top footer text-muted">
                        <div class="container">
                            &copy; 2020 - Meiko Towada Vietnam
                        </div>
                    </footer>
                }
            </div>
        </div>
    </div>


    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
    <script src="~/js/home/popper.min.js"></script>
    <script src="~/js/home/popper.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/js/home/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/js/home/main.js"></script>

</body>
</html>